<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="790" Height="590"
        MinWidth="630" MinHeight="470"
        MaxWidth="1000" MaxHeight="750"
        x:Class="P2.MainWindow"
        Title="Sistema de Reparaciones">
        
       <StackPanel Orientation="Vertical" Margin="5">
               
               <DockPanel Margin="5">
                       <Label 
                               DockPanel.Dock="Top"
                               HorizontalAlignment="Center"
                               Content="Seleccione un aparato"
                               Margin="5"/>
               </DockPanel>
               
               <DockPanel Margin="5">
                       <Label 
                               DockPanel.Dock="Left"
                               Content="Aparato"
                               Margin="5"/>
                        
                       <ComboBox
                               Name="CbAparato"
                               SelectedIndex="0"
                               Width="300"
                               HorizontalAlignment="Center">
                               <ComboBoxItem Content="Radio"/>
                               <ComboBoxItem Content="Televisor"/>
                               <ComboBoxItem Content="DVD"/>
                               <ComboBoxItem Content="Adaptador TDT"/>
                       </ComboBox>
               </DockPanel>
               
               <Button
                       Margin="20"
                       Name="BtSelect"
                       Content="Seleccionar"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Padding="10"/>
               
               <Button
                       Margin="5"
                       Name="BtView"
                       Content="Ver todas las reparaciones"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Padding="10"/>
               
        </StackPanel>
        
</Window>
